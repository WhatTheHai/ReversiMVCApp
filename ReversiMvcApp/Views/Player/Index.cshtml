@model IEnumerable<ReversiMvcApp.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountLost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountDrawn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountLost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountDrawn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-token="@item.Guid">Edit</a> |
                <a asp-action="Details" asp-route-token="@item.Guid">Details</a> |
                <a asp-action="Delete" asp-route-token="@item.Guid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
